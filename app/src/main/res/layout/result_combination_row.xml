<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/boardRoad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:paddingVertical="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_margin="2dp"
                android:layout_width="@dimen/token_result_size"
                android:layout_height="@dimen/token_result_size"
                android:src="@drawable/empty_color"/>
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="@dimen/token_result_size"
                android:layout_height="@dimen/token_result_size"
                android:src="@drawable/empty_color"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="@dimen/token_result_size"
                android:layout_height="@dimen/token_result_size"
                android:src="@drawable/empty_color"/>
            <ImageView
                android:layout_margin="2dp"
                android:layout_width="@dimen/token_result_size"
                android:layout_height="@dimen/token_result_size"
                android:src="@drawable/empty_color"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/colorOne"
        android:layout_marginLeft="15dp"
        android:layout_width="@dimen/token_size"
        android:layout_height="@dimen/token_size"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:src="@drawable/empty_color"/>
    <ImageView
        android:id="@+id/colorTwo"
        android:layout_marginLeft="15dp"
        android:layout_width="@dimen/token_size"
        android:layout_height="@dimen/token_size"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:src="@drawable/empty_color"/>
    <ImageView
        android:id="@+id/colorThree"
        android:layout_marginLeft="15dp"
        android:layout_width="@dimen/token_size"
        android:layout_height="@dimen/token_size"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:src="@drawable/empty_color"/>
    <ImageView
        android:id="@+id/colorFour"
        android:layout_marginLeft="15dp"
        android:layout_width="@dimen/token_size"
        android:layout_height="@dimen/token_size"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:src="@drawable/empty_color"/>

</LinearLayout>